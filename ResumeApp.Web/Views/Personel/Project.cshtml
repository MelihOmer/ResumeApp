@model List<Project>
@{
    Layout = "_personelLayout";
    ViewData["Title"] = "- Project";
}
<section class="py-5">
    <div class="container px-5 mb-5">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Projeler</span></h1>
        </div>
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-11 col-xl-9 col-xxl-8">
                <!-- Project Card 1-->
                @foreach (var project in Model)
                {
                    <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                        <div class="card-body p-0">
                            <div class="d-flex align-items-center">
                                <div class="p-5">
                                    
                                    <h2 class="fw-bolder">@project.ProjectName</h2>
                                    <p>@project.ProjectDescription</p>
                                </div>
                                <img class="img-fluid" src="https://dummyimage.com/300x400/343a40/6c757d" alt="..." />
                            </div>
                        </div>
                        <div class="btn btn-Primary">@Html.ActionLink(" Projeyi İndir","ProjectDownload",new {projectName = project.Guid},new{@class = "d-inline-block bi bi-download me-2 btn btn-outline-primary text-end"})</div>
                    </div>
                    
                }

            </div>
        </div>
    </div>
</section>
<section class="py-5 bg-gradient-primary-to-secondary text-white">
    <div class="container px-5 my-5">
        <div class="text-center">
            <h2 class="display-4 fw-bolder mb-4">Birlikte bir şeyler inşa edelim mi?</h2>
            <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" asp-action="Contact" asp-controller="Personel">İletişime Geç</a>
        </div>
    </div>
</section>