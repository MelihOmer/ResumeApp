@model ProjectUpdateDto
<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Resume App Project Form</h1>
                    </div>
                    <form class="user" asp-action="EditProject" asp-controller="Project" enctype="multipart/form-data">
                        <input style="display:none;" asp-for="Id" />
                        <input style="display:none;" asp-for="ResumeId" />
                        <input style="display:none;" asp-for="GUID"/>
                        <input style="display:none;" asp-for="ProjectPath"/>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user border-danger" autocomplete="off" placeholder="Proje Adı" asp-for="ProjectName">
                                <span asp-validation-for="ProjectName" class="text-danger mx-5 "></span>
                            </div>
                        </div>
                        <div class="">
                            <textarea type="text" class="form-control form-control-user border-danger" autocomplete="off" placeholder="Proje Açıklaması" asp-for="ProjectDescription"></textarea>
                            <span asp-validation-for="ProjectDescription" class="text-danger mx-5 "></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <input type="file" asp-for="file" class="form-control" id="file" />
                                <span asp-validation-for="file" class="text-danger mx-5"></span>
                            </div>
                            <div class="form-check col-md-6">
                                <input class="form-check-input" id="fileUpdate" type="checkbox" asp-for="FileUpdate">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Dosya Güncelle
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-outline-success btn-user btn-block">Proje Dosyasını Güncelle </button>
                        <hr>
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        toggleFileInput();

        // Checkbox durumunu değiştikçe input alanını güncelle
        $("#fileUpdate").on("change", function () {
            toggleFileInput();
        });
    });

    function toggleFileInput() {
        var fileUpdateCheckbox = $("#fileUpdate");
        var fileIdInput = $("#file");

        if (fileUpdateCheckbox.prop("checked")) {
            fileIdInput.prop("disabled", false); // Etkin hale getir
        } else {
            fileIdInput.prop("disabled", true); // Pasif hale getir
        }
    }
</script>