@model IEnumerable<Project>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Proje Adı</th>
                        <th>Açıklama</th>
                        <th>GUID</th>
                        <th>Dosya Yolu</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProjectName</td>
                            <td>@item.ProjectDescription</td>
                            <td>@item.Guid</td>
                            <td>@item.ProjectPath</td>
                            <td><a class="btn btn-outline-warning" asp-action="EditProject" asp-controller="Project" asp-route-id="@item.Id">Düzenle</a></td>
                            <td><a class="btn btn-outline-danger" asp-action="Remove" asp-controller="Project" asp-route-id="@item.Id">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>